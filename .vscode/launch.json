{
    "version": "0.2.0",
    "configurations": [
        // launch configuration to debug the plugin using tsx directly without pnpm script
        {
            "name": "node tsx test/index.ts", // Debug Test (Direct tsx)
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsx",
            "runtimeArgs": [
                "test/index.ts"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },

        {
            // Alternative launch configuration to debug the plugin using tsx via pnpm script
            "name": "pnpm run debug", // Debug Plugin with tsx
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "run",
                "debug"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
    ]
}
